<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inf04202106.MainPage"
			 BackgroundColor="White">

	<VerticalStackLayout>
		<Label FontSize="Header" TextColor="White" BackgroundColor="Teal" Text="Rejestruj konto" />
		
		<Label TextColor="Gray" Text="Podaj e-mail:" />
		<Entry TextColor="Black" x:Name="emailEntry" Placeholder="email" />

		<Label TextColor="Gray" Text="Podaj hasło:" />
		<Entry TextColor="Black" x:Name="passwordEntry" IsPassword="True" />

		<Label TextColor="Gray" Text="Powtórz hasło" />
		<Entry TextColor="Black" x:Name="repeatPasswordEntry" IsPassword="True" />

		<Button BackgroundColor="LightGray" TextColor="Black" HorizontalOptions="Center" Text="ZATWIERDŹ" Clicked="ConfirmButtonClicked" />

		<Label TextColor="Gray" HorizontalOptions="Center" x:Name="infoLbl" />
	</VerticalStackLayout>

</ContentPage>
